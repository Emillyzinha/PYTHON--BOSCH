# criar aplicação que tivesse controle de playlist de programa de TV (filmes, séries)
# MODELO = nome que dá pare quando está criando um conceito de classes que vão rpresentar um domínio no sistema

class Filme:
    def __init__(self, nome, ano, duracao):
        self.__nome = nome.title()
        # capitalize = para parágrafo, deixar a primeira letra maiúscula
        self.ano = ano
        self.duracao = duracao
        self.__likes = 0

    # método = criado para informações que vão mudar também

    @property
    def likes(self):
        return self.__likes

    def dar_like(self):
        self.__likes += 1

    @property
    def nome(self):
        return self.__nome


class Serie:
    def __init__(self, nome, ano, temporadas):
        self.__nome = nome.title()
        self.ano = ano
        self.temporadas = temporadas
        self.__likes = 0

    @property
    def likes(self):
        return self.__likes

    def dar_like(self):
        self.__likes += 1

    @property
    def nome(self):
        return self.__nome

    @nome.setter
    def nome(self, novo_nome):
        

vingadores = Filme('vingadores - guerra infinita', 2018, 160)
vingadores.dar_like()
print(f'Nome: {vingadores.nome} - Ano: {vingadores.ano} - Duração: {vingadores.ano} - Likes: {vingadores.likes}')

atlanta = Serie('atlanta', 2018, 2)
atlanta.dar_like()
atlanta.dar_like()
print(f'Nome: {atlanta.nome} - Ano: {atlanta.ano} - Temporada(s): {atlanta.temporadas} - Likes: {atlanta.likes}')
